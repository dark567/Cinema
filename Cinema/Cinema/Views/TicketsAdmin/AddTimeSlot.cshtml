@using Cinema.Models.Tickets
@model Cinema.Models.Tickets.TimeSlot

@section SubNav
{
    @Html.Partial("~/Views/Shared/SubNavigation.cshtml", SubNavigationMenu.TimeSlots)
}

<h2>TimeSlots Add</h2>
@using (Html.BeginForm("AddTimeSlot", "TicketsAdmin"))
{
    <div class="form-group">
        @Html.LabelFor(x => x.StartTime)
        @Html.EditorFor(x => x.StartTime, new { htmlAttrubutes = new { @class = "form-control" } })
    </div>

    @Html.Partial("~/Views/Editors/MoviesList.cshtml")
    @Html.Partial("~/Views/Editors/HallsList.cshtml")
    @Html.Partial("~/Views/Editors/TariffsList.cshtml")
     
    <input type="submit" value="Add timeslot" class="btn btn-success" />
}
