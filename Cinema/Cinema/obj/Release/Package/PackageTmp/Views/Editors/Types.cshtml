@using Cinema.Utils
@using Type = Cinema.Models.Tickets.Type
@model Type[]
@{
    var types = EnumUtil.GetValues<Type>();
}

<div class="form-group">
    <label>Types</label>
    <select multiple name="Types" id="Types" class="form-control">
        @foreach (var type in types)
        {
            <option value="@type" @(Model != null && Model.Contains(type) ? "selected" : string.Empty)>@type</option>
        }
    </select>
</div>

