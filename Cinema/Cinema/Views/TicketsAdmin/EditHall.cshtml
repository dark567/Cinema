@using Cinema.Models.Tickets
@model Cinema.Models.Tickets.Hall

@section SubNav
{
    @Html.Partial("~/Views/Shared/SubNavigation.cshtml", SubNavigationMenu.Halls)
}

<h2>Halls Edit</h2>
@using (Html.BeginForm("EditHall", "TicketsAdmin"))
{
    @Html.HiddenFor(x => x.Id)
    <div class="form-group">
        @Html.LabelFor(x => x.Name)
        @Html.EditorFor(x => x.Name, new { htmlAttrubutes = new { @class = "form-control" } })
    </div>

    <input type="submit" value="Save changes" class="btn btn-success" />
}
