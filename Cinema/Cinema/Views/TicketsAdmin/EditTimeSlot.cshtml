@using Cinema.Models.Tickets
@model Cinema.Models.Tickets.TimeSlot

@section SubNav
{
    @Html.Partial("~/Views/Shared/SubNavigation.cshtml", SubNavigationMenu.TimeSlots)
}

<h2>TimeSlots Edit</h2>
@using (Html.BeginForm("EditTimeSlot", "TicketsAdmin"))
{
    @Html.HiddenFor(x => x.Id)

    <div class="form-group">
        @Html.LabelFor(x => x.StartTime)
        @Html.EditorFor(x => x.StartTime, new { htmlAttrubutes = new { @class = "form-control" } })
    </div>

    @Html.Partial("~/Views/Editors/MoviesList.cshtml", Model.MovieId)
    @Html.Partial("~/Views/Editors/HallsList.cshtml", Model.HallId)
    @Html.Partial("~/Views/Editors/TariffsList.cshtml", Model.TariffId)
     
    <input type="submit" value="Save changes" class="btn btn-success" />
}
